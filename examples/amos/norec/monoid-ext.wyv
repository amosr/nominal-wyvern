name Monoid {z =>
  type T >= Bot
  val id : z.T
  def op(a:z.T, b:z.T):z.T
}


name CountMonoid { z =>
  type T = Int
  val id: Int
  def op(a: Int, b: Int): Int
}

subtype CountMonoid <: Monoid

